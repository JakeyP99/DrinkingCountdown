<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:toDegrees="-90">

<layer-list>

    <!-- Background Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/bluedarktransparent" /> <!-- Background color of the donut -->
        </shape>
    </item>

    <!-- Donut Shape -->
    <item>
        <shape
            android:innerRadiusRatio="2"
            android:shape="ring"
            android:thicknessRatio="15"
            android:useLevel="true">
            <solid android:color="@color/bluedark" /> <!-- Color of the donut shape -->
        </shape>
    </item>

</layer-list>
</rotate>