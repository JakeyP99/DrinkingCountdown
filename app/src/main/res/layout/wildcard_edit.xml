<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textview_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="Wildcards and probabilities"
        android:textColor="@color/bluedark"
        android:textSize="23sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/textview_banner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listView_WildCard"
                android:layout_width="match_parent"
                android:layout_height="442dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textview_gamemodeWildCardBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/viga"
                android:gravity="center"
                android:text="Game Mode Wild Cards"
                android:textColor="@color/bluedark"
                android:textSize="23sp" />

            <ListView
                android:id="@+id/listView_GameModeWildCards"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnAddWildCard"
                android:layout_width="139dp"
                android:layout_height="77dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/outlineforbutton"
                android:text="Add Wild Card"
                android:textAllCaps="false"
                android:textColor="@color/bluedark"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
