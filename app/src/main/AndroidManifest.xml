<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/wine"
        android:label="Drinking Countdown"
        android:roundIcon="@drawable/wine"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".HomeScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
        />

        <activity
            android:name=".PlayerNumberChoice" />

        <activity
            android:name=".EndActivity" />

        <activity
            android:name=".NumberChoice" />

        <activity
            android:name=".Instructions" />

        <activity
            android:name=".Settings" />

        <activity
            android:name=".Settings_WildCard_Choice"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name=".Settings_GameModeChoice" />

        <activity
            android:name=".MainActivitySplitScreen" />

        <activity
            android:name=".DrawingActivity" />

        <activity
            android:name=".PlayerModel"
            android:windowSoftInputMode="adjustNothing" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
