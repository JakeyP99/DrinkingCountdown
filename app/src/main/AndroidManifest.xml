<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/wine"
        android:label="Drinking Countdown"
        android:roundIcon="@drawable/wine"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".HomeScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".PlayerNumberChoice" />
        <activity android:name=".EndActivity" />
        <activity android:name=".NumberChoice"/>
        <activity android:name=".Instructions" />
        <activity android:name=".SettingClass"/>
        <activity android:name=".Settings_WildCardChoice"/>
        <activity android:name=".PlayerNameChoice" />
        <activity android:name=".Settings_GameModeChoice" />
        <activity android:name=".MainActivitySplitScreen" />
        <activity
            android:name=".Settings_PlayerModel"
            android:windowSoftInputMode="adjustNothing">
        </activity>



        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>


</manifest>