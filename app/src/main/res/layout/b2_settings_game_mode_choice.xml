<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textview_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:text="Game Modes &amp; Layouts"
        android:textColor="@color/bluedark"
        android:textSize="23sp" />

    <Button
        android:id="@+id/button_gameModeOne"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:maxLines="4"
        android:textAllCaps="false"
        android:text="Single Screen"
        android:textAlignment="center"
        android:background="@drawable/outlineforbutton"
        android:layout_gravity="center"
        android:textColor="@color/bluedark"
        android:textSize="23sp" />

    <Button
        android:id="@+id/button_gameModeTwo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:maxLines="4"
        android:text="Split Screen"
        android:textAllCaps="false"
        android:background="@drawable/outlineforbutton"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/bluedark"
        android:textSize="23sp" />

    <Button
        android:id="@+id/button_payForWildcards"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:maxLines="4"
        android:text="Pay For Wild Cards"
        android:textAllCaps="false"
        android:background="@drawable/outlineforbutton"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/bluedark"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textview_banner_sound_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textAllCaps="false"
        android:text="Sound Settings"
        android:textColor="@color/bluedark"
        android:textSize="23sp" />

    <Button
